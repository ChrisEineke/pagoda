{
    "type": "object",
    "properties": {
        "version":    { "$ref": "#/definitions/version" },
        "stereotype": { "$ref": "#/definitions/stereotype" }
    },
    "definitions": {
        "version": { "type": "integer" },
        "stereotype": {
            "properties": {
                "id":           { "$ref": "#/definitions/id" },
                "owner":        { "$ref": "#/definitions/owner" },
                "requires":     { "$ref": "#/definitions/requires" },
                "defines":      { "$ref": "#/definitions/defines" },
                "resources":    { "$ref": "#/definitions/resources" },
                "integrations": { "$ref": "#/definitions/integrations" },
                "deployments":  { "$ref": "#/definitions/deployments" },
                "templates":    { "$ref": "#/definitions/templates" }
            }
        },
        "id": { "type": "string" },
        "owner": { "type": "string" },
        "requires": {
            "oneOf": [ {
                "type": "array",
                "items": { "$ref": "#/definitions/id" }
            }, { "type": "null" } ]
        },
        "defines": {
            "oneOf": [ {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "id": { "$ref": "#/definitions/id" }
                    }
                }
            }, { "type": "null" } ]
        },
        "resources": {
            "oneOf": [ {
                "type": "array",
                "items": { "$ref": "#/definitions/id" }
            }, { "type": "null" } ]
        },
        "integrations": {
            "oneOf": [ {
                "type": "array",
                "items": { "$ref": "#/definitions/id" }
            }, { "type": "null" } ]
        },
        "deployments": {
            "oneOf": [ {
                "type": "array",
                "items": { "$ref": "#/definitions/id" }
            }, { "type": "null" } ]
        },
        "templates": {
            "oneOf": [ {
                "type": "array",
                "items": { "$ref": "#/definitions/id" }
            }, { "type": "null" } ]
        }
    }
}
