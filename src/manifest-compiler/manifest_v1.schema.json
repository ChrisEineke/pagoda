{
    "type": "object",
    "properties": {
        "version": { "$ref": "#/definitions/version" }
    },
    "oneOf": [
        { "$ref": "#/definitions/manifests" },
        { "$ref": "#/definitions/manifest" }
    ],
    "definitions": {
        "version": { "type": "integer" },
        "manifests": {
            "type": "array",
            "items": { "$ref": "#/definitions/manifest" }
        },
        "manifest": {
            "properties": {
                "id":           { "$ref": "#/definitions/id" },
                "owner":        { "$ref": "#/definitions/owner" },
                "stereotype":   { "$ref": "#/definitions/stereotype" },
                "requires":     { "$ref": "#/definitions/requires" },
                "defines":      { "$ref": "#/definitions/defines" },
                "resources":    { "$ref": "#/definitions/arrayOfManifestRefs" },
                "integrations": { "$ref": "#/definitions/arrayOfManifestRefs" },
                "deployments":  { "$ref": "#/definitions/arrayOfManifestRefs" },
                "templates":    { "$ref": "#/definitions/arrayOfTemplateRefs" }
            }
        },
        "id": { "type": "string" },
        "owner": { "type": "string" },
        "stereotype": { "$ref": "#/definitions/id" },
        "requires": {
            "oneOf": [ {
                "type": "array",
                "items": { "$ref": "#/definitions/id" }
            }, {
                "type": "null"
            } ]
        },
        "defines": {
            "oneOf": [ {
                "type": "object"
            }, {
                "type": "null"
            } ]
        },
        "arrayOfManifestRefs": {
            "oneOf": [ {
                "type": "array",
                "items": {
                    "anyOf": [ {
                        "$ref": "#/definitions/id"
                    }, {
                        "$ref": "#/definitions/manifest"
                    } ]
                }
            }, {
                "type": "null"
            } ]
        },
        "arrayOfTemplateRefs": {
            "oneOf": [ {
                "type": "array",
                "items": {
                    "anyOf": [ {
                        "$ref": "#/definitions/id"
                    }, {
                        "type": "object",
                        "properties": {
                            "id": { "$ref": "#/definitions/id" }
                        }
                    } ]
                }
            }, {
                "type": "null"
            } ]
        }
    }
}
